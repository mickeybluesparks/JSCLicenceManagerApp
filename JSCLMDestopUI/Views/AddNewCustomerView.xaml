<UserControl x:Class="JSCLMDestopUI.Views.AddNewCustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JSCLMDestopUI.Views"
              xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
            mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="12"
            BorderThickness="2">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Border CornerRadius="0,10,10,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <!-- Main Dialog Content -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0"
                            Orientation="Horizontal" VerticalAlignment="Top">
                            <Label Content="Customer's First Name" 
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="16"
                                    FontFamily="Montserrat"
                                    FontWeight="Medium" Margin="10, 0,0,0"/>
                            <TextBox Text="{Binding FirstName, 
                                                Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                                        Height="20"
                                        Width="500"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="16"
                                    FontFamily="Montserrat"
                                    FontWeight="Medium" Margin="10, 0,0,0"
                                           
                            />
                        </StackPanel>
                        <StackPanel Grid.Row="1" Margin="0,20,0,0"
                            Orientation="Horizontal" VerticalAlignment="Top">
                            <Label Content="Customer's Last Name" 
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="16"
                                    FontFamily="Montserrat"
                                    FontWeight="Medium" Margin="10, 0,0,0"/>
                            <TextBox Text="{Binding LastName, Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                                        Height="20"
                                        Width="500"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="16"
                                    FontFamily="Montserrat"
                                    FontWeight="Medium" Margin="10, 0,0,0"
                                           
                            />
                        </StackPanel>
                        <StackPanel Grid.Row="2" Margin="0,20,0,0"
                            Orientation="Horizontal" VerticalAlignment="Top">
                            <Label Content="Customer's Email Address" 
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="16"
                                    FontFamily="Montserrat"
                                    FontWeight="Medium" Margin="10, 0,0,0"/>
                            <TextBox Text="{Binding EmailAddress, Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}"
                                        Height="20"
                                        Width="500"
                                    Foreground="{StaticResource titleColor2}"
                                    FontSize="16"
                                    FontFamily="Montserrat"
                                    FontWeight="Medium" Margin="10, 0,0,0"
                                           
                            />
                        </StackPanel>

                    </Grid>

                    <Grid Grid.Row="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment ="Center">
                            <Grid  Grid.IsSharedSizeScope="true">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="A"/>
                                    <ColumnDefinition SharedSizeGroup="A"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"    
                Content = "Save Customer Data"                            
                        FontSize = "12"
                        FontFamily = "Montserrat"
                        Cursor = "Hand"
                        BorderThickness = "0"
                        Foreground = "White"
                VerticalAlignment = "Top" Margin="10,0,10,0" 
                    Command="{Binding SaveCustomer}">

                                    <Button.Style >
                                        <Style TargetType = "Button" >
                                            <Setter Property = "Background" Value = "#773DFF" />
                                            <Setter Property = "Template" >
                                                <Setter.Value >
                                                    <ControlTemplate TargetType = "Button" >
                                                        <Border Height = "30" 
                                                CornerRadius = "15"
                                            Padding="10,0,10,0"
                                                Background = "{TemplateBinding Background}" >
                                                            <ContentPresenter VerticalAlignment = "Center" 
                                                                    HorizontalAlignment = "Center" />
                                                        </Border >
                                                    </ControlTemplate >
                                                </Setter.Value >
                                            </Setter >
                                            <Style.Triggers >
                                                <Trigger Property = "IsMouseOver" Value = "True" >
                                                    <Setter Property = "Background" Value = "#836EFB" />
                                                </Trigger >
                                            </Style.Triggers >
                                        </Style >
                                    </Button.Style >

                                </Button>

                                <Button     Grid.Column="1"
                Content = "Cancel"                            
                        FontSize = "12"
                        FontFamily = "Montserrat"
                        Cursor = "Hand"
                        BorderThickness = "0"
                        Foreground = "White"
                VerticalAlignment = "Top" 
                        Margin="10,0,10,0" 
                        Command="{Binding Cancel}" >

                                    <Button.Style >
                                        <Style TargetType = "Button" >
                                            <Setter Property = "Background" Value = "#773DFF" />
                                            <Setter Property = "Template" >
                                                <Setter.Value >
                                                    <ControlTemplate TargetType = "Button" >
                                                        <Border Height = "30" 
                                                CornerRadius = "15"
                                            Padding="10,0,10,0"
                                                Background = "{TemplateBinding Background}" >
                                                            <ContentPresenter VerticalAlignment = "Center" 
                                                                    HorizontalAlignment = "Center" />
                                                        </Border >
                                                    </ControlTemplate >
                                                </Setter.Value >
                                            </Setter >
                                            <Style.Triggers >
                                                <Trigger Property = "IsMouseOver" Value = "True" >
                                                    <Setter Property = "Background" Value = "#836EFB" />
                                                </Trigger >
                                            </Style.Triggers >
                                        </Style >
                                    </Button.Style >

                                </Button>
                            </Grid>
                        </StackPanel>

                    </Grid>


                </Grid>

            </Border>


        </Grid>

    </Border>
</UserControl>
